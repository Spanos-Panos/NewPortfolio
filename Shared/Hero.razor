@namespace Portfolio.Shared

<section id="hero" class="hero-section">
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">
                Hi, I'm <span class="hero-name">Panos Spanos</span>
            </h1>
            <p class="hero-subtitle">
                Junior Backend Developer & .NET Enthusiast
            </p>
            <p class="hero-description">
                Passionate about building real-world applications with C# and .NET. Currently completing my certification 
                at IEK Lamias and seeking opportunities to grow as a backend developer. I dedicate 4-8 hours daily to 
                learning and coding, focusing on clean, functional solutions.
            </p>
        </div>
        
        <div class="hero-buttons">
            <button class="btn-primary">
                View My Projects
            </button>
            <button class="btn-secondary">
                Contact Me
            </button>
        </div>
        
        <div class="hero-scroll">
            <div class="scroll-indicator">
                <svg class="scroll-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                </svg>
            </div>
            <p class="scroll-text">Scroll to explore</p>
        </div>
    </div>
</section>